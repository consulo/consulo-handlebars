{{! samples from http://handlebarsjs.com }}
<body>
    <h1>{{title}}</h1>

    <div class="entry">
        {{#if author}}
            <h1>{{firstName}} {{lastName}}</h1>
        {{else}}
            <h1>Unknown Author</h1>
        {{/if}}
    </div>

    <div class="body">
        {{body}}
    </div>

    <h1>Comments</h1>

    <div id="comments">
        {{#each comments}}
            <h2><a href="/posts/{{../permalink}}#{{id}}">{{title}}</a></h2>
            <div>{{body}}</div>
        {{/each}}
    </div>
</body>